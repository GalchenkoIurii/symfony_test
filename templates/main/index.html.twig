{% extends 'base.html.twig' %}

{% block title %}Main page{% endblock %}

{% block body %}

<div class="example-wrapper">
    <h1>Main page</h1>

    <div class="form">
        {{ form_start(form) }}
        {{ form_widget(form) }}
        {{ form_end(form) }}
    </div>
        <table class="table">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Title</th>
                    <th scope="col">Description</th>
                    <th scope="col">Status</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
            {% for note in notes %}
                <tr>
                    <th scope="row">{{ note.id }}</th>
                    <td>{{ note.title }}</td>
                    <td>{{ note.description }}</td>
                    <td>{{ note.status }}</td>
                    <td><a href="" class="btn btn-danger">Delete Note</a></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
</div>
{% endblock %}
