{% extends 'base.html.twig' %}

{% block title %}Notes{% endblock %}

{% block body %}

<div class="container">
    <div class="content">
        <h1>Notes</h1>
        <table class="table">
            <thead class="thead-dark">
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Title</th>
                <th scope="col">Description</th>
                <th scope="col">Status</th>
                <th scope="col">Action</th>
            </tr>
            </thead>
            <tbody>
            {% for note in notes %}
                <tr>
                    <th scope="row">{{ note.id }}</th>
                    <td>{{ note.title }}</td>
                    <td>{{ note.description }}</td>
                    <td>
                        {% if note.status == 1 %}
                        <span class="status status-new">New</span>
                        {% elseif note.status == 2 %}
                        <span class="status status-in-progress">In Progress</span>
                        {% elseif note.status == 3 %}
                        <span class="status status-done">Done</span>
                        {% endif %}
                    </td>
                    <td><a href="{{ path('remove_note', {'note': note.id}) }}" class="btn btn-danger">Delete Note</a></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
