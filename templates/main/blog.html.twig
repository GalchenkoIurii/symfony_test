{% extends 'base.html.twig' %}

{% block title %}Blog{% endblock %}

{% block body %}

<div class="example-wrapper">
    <h1>Blog page âœ…</h1>

    <p>Blog content</p>
    {% if first_post is defined and second_post is defined %}
    <ul>
        <li>{{ first_post }}</li>
        <li>{{ second_post }}</li>
    </ul>
    {% endif %}
    {% if third_post is defined %}
    <ul>
        {% for post in third_post %}
            <li>{{ post }}</li>
        {% endfor %}
    </ul>
    {% endif %}

    {% if page is defined %}
        <div>
            <p>Page: {{ page }}</p>
        </div>
    {% endif %}
</div>
{% endblock %}
