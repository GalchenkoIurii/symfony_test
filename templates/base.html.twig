<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
            <style>
                .navbar { min-height: 100px; }
                /*footer nav { min-height: 200px; background-color: #222; color: #fff; }*/
                /*h1 { margin-top: 50px; margin-bottom: 100px; text-align: center; }*/
                /*.wrapper { margin: 1em auto 3em; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }*/
                /*.form { margin-bottom: 100px; }*/
            </style>
        {% endblock %}
    </head>
    <body>
        {% block header %}
            <header class="bg-primary">
                <div class="container">
                    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
                        <a class="navbar-brand" href="{{ path('index') }}">Logo</a>
                        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                            <div class="navbar-nav">
                                <a class="nav-item nav-link active" href="{{ path('index') }}">Home <span class="sr-only">(current)</span></a>
                                <a class="nav-item nav-link" href="{{ path('add') }}">Add New Note</a>
                            </div>
                        </div>
                    </nav>
                </div>
            </header>
        {% endblock %}
        {% block body %}{% endblock %}
        {% block footer %}
            <footer>
                <div class="container">
                    <nav class="navbar-expand-lg navbar-dark bg-dark">
                        <a class="navbar-brand" href="{{ path('index') }}">Logo</a>
                            <div class="navbar-nav">
                                <a class="nav-item nav-link active" href="{{ path('index') }}">Home <span class="sr-only">(current)</span></a>
                                <a class="nav-item nav-link" href="{{ path('add') }}">Add New Note</a>
                            </div>
                    </nav>
                </div>
            </footer>
        {% endblock %}
        {% block javascripts %}
            <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
            <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
            <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
        {% endblock %}
    </body>
</html>
